{
  "name": "virejo",
  "displayName": "Virejo - Test File Generator",
  "description": "Automatically generates Vitest test files for TypeScript/TSX files",
  "version": "0.1.0",
  "publisher": "virejo",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "virejo.generateTestFile",
        "title": "Generate Test File"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .ts || resourceExtname == .tsx",
          "command": "virejo.generateTestFile",
          "group": "2_workspace"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "typescript": "^4.9.4"
  }
}