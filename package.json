{
  "name": "virejo",
  "displayName": "Virejo - Test File Generator",
  "description": "Automatically generates Vitest test files for TypeScript/TSX files",
  "version": "0.1.0",
  "publisher": "virejo",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "virejo.generateTestFile",
        "title": "Generate Test File"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .ts || resourceExtname == .tsx",
          "command": "virejo.generateTestFile",
          "group": "2_workspace"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:vscode": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22.5.4",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitest/ui": "3.2.4",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.1.0",
    "c8": "^10.1.2",
    "eslint": "^9.10.0",
    "jsdom": "^25.0.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "typescript": "^4.9.4"
  }
}
